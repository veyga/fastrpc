[loggers]
keys = root,simple,colored

[logger_root]
level = INFO
handlers = root
qualname = root

[logger_simple]
level = INFO
handlers = simple
qualname = simple

[logger_colored]
level = DEBUG
handlers = colored
qualname = colored

[handlers]
keys = root,simple,colored

[handler_root]
class = StreamHandler
level = INFO
formatter = root
args = (sys.stdout,)

[handler_simple]
class = StreamHandler
level = INFO
formatter = simple
args = (sys.stdout,)

[handler_colored]
class = StreamHandler
level = DEBUG
formatter = colored
propagate = False
args = (sys.stdout,)

[formatters]
keys = root,simple,colored

[formatter_root]
format = %(message)s
class = _fastrpc.utils.log.RootFormatter

[formatter_simple]
format = %(message)s
class = _fastrpc.utils.log.SimpleFormatter

[formatter_colored]
format = %(message)s
class = _fastrpc.utils.log.ColoredFormatter
